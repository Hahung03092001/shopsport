@model web_baiTapLon.data.dtUser

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/chung.cshtml";
}
<style>
    .log{
        background-color:bisque;
        width :400px;
        padding:25px 20px;
        margin-top: 30px;
        margin:auto;
    }
</style>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div style="display:flex; padding:20px;">
    <div class=" log">
            
                <h2 class="mb-4">Đăng nhập để chỉnh sửa sản phẩm</h2>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <form class="form_login">
                    <div class="form-group">
                        @Html.LabelFor(a => a.Email)
                        @Html.TextBoxFor(a => a.Email, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Email)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.Password)
                        @Html.PasswordFor(a => a.Password, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Password)
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="check_login">
                        <label class="form-check-label" for="check_login">Nhớ mật khẩu</label>
                    </div>
                    <button type="submit" class="btn btn-outline-dark ml-5 mt-3 mb-3">Đăng nhập</button>
                </form>
            
            
        </div>
    </div>
}

