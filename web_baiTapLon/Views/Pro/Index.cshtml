
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/products_layout.cshtml";
}
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<style>
    .searchProductContainer {
        margin-bottom: 50px;
    }

    .inputSearch {
        border: none;
        outline: none
    }

    .searchProduct {
        width: 250px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        border: 2px solid #5B20F5;
        padding: 5px 30px;
        border-radius: 20px;
        transition: 0.2s;
    }

        .searchProduct a {
            position: relative;
            color: #5B20F5;
            flex: 2;
        }

            .searchProduct a ion-icon {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }

        .searchProduct:hover {
            box-shadow: 0 0 10px #5B20F5;
        }
</style>
@using (Html.BeginForm("Ketquatimkiem", "Timkiem", FormMethod.Post))
{
    <div class="searchProductContainer">
        <div class="searchProduct">
            @Html.TextBox("txtsearchkey", "", htmlAttributes: new { @class = "inputSearch", @placeholder = "Nhap san pham .." })
            <a href="#"><ion-icon name="search-outline"></ion-icon></a>
        </div>
    </div>
}


