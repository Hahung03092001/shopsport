@model web_baiTapLon.data.dtSanPham

@{
    ViewBag.Title = "Themsp";
    Layout = "~/Views/Shared/chung.cshtml";
}

<style>
    .cre{
        width:80%;
        background-color:lavender;
        margin-left: 10%;
        margin-top: 30px;
        padding:20px 20px;
        border-radius:30px;
        
    }
    .butcre{
        border-style:solid;
        border-color:orangered;
        border-radius:20px;
    }
    .butcre:hover{
        background-color:orangered;
    }
</style>

@using (Html.BeginForm()) 
